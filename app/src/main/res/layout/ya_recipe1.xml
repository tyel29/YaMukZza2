<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--툴바, 추가된 소스-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/YaMukZza"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <Button
            android:id="@+id/my_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff656c"
            android:gravity="center"
            android:text="야먹자"
            android:textColor="@color/colorW"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="490dp"
        android:layout_height="89dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_mypage"

            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:background="#ff656c"
            android:text="mypage"
            android:textColor="@color/colorW"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="666dp" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:background="#ff656c"
            android:text="search"
            android:textColor="@color/colorW"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="666dp" />

        <Button
            android:id="@+id/btn_main"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:background="#ff656c"
            android:text="main"
            android:textColor="@color/colorW"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="666dp" />

        <Button
            android:id="@+id/btn_recipe"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:background="#ff656c"
            android:text="recipe"
            android:textColor="@color/colorW"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="247dp"
            tools:layout_editor_absoluteY="666dp" />

        <Button
            android:id="@+id/btn_basket"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:background="#ff656c"
            android:text="basket"
            android:textColor="@color/colorW"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="329dp"
            tools:layout_editor_absoluteY="666dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:background="@color/YaMukZza"
        android:gravity="center"
        android:text=" 게시판 "
        android:textColor="@color/colorW"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="3dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="174dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@color/YaMukZza"
                android:gravity="center"
                android:text="작성자"
                android:textColor="@color/colorW"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@color/YaMukZza"
                android:gravity="center"
                android:text="재료"
                android:textColor="@color/colorW"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@color/YaMukZza"
                android:gravity="center"
                android:text="요리명"
                android:textColor="@color/colorW"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout3"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="128dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="홍길동"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="237dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="59dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="계란"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="계란찜"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/YaMukZza"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/게시물"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/초기화면"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/YaMukZza"
            android:text="처음"
            android:textColor="@color/colorW" />

        <Button
            android:id="@+id/리스트1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/YaMukZza"
            android:text="1"
            android:textColor="@color/colorW" />

        <Button
            android:id="@+id/리스트2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/YaMukZza"
            android:text="2"
            android:textColor="@color/colorW" />

        <Button
            android:id="@+id/리스트3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/YaMukZza"
            android:text="3"
            android:textColor="@color/colorW" />

        <Button
            android:id="@+id/다음화면"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/YaMukZza"
            android:text="다음"
            android:textColor="@color/colorW" />

    </LinearLayout>

    <Button
        android:id="@+id/게시물"
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/YaMukZza"
        android:text="게시물 등록"
        android:textColor="@color/colorW"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


</android.support.constraint.ConstraintLayout>